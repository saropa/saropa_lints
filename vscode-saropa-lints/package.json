{
  "name": "saropa-lints-runner",
  "displayName": "Saropa Lints Runner",
  "description": "Quick button to run Saropa custom lints",
  "version": "1.0.0",
  "publisher": "saropa",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "workspaceContains:**/pubspec.yaml"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "saropa-lints.run",
        "title": "Run Saropa Lints",
        "icon": "$(bug)",
        "category": "Saropa"
      },
      {
        "command": "saropa-lints.scanPath",
        "title": "Scan with Saropa Lints",
        "category": "Saropa"
      }
    ],
    "keybindings": [
      {
        "command": "saropa-lints.run",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus && resourceExtname == .dart"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "saropa-lints.run",
          "group": "navigation",
          "when": "resourceExtname == .dart"
        }
      ],
      "explorer/context": [
        {
          "command": "saropa-lints.scanPath",
          "group": "7_modification",
          "when": "resourceExtname == .dart || explorerResourceIsFolder"
        }
      ]
    }
  }
}